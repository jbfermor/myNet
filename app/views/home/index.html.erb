<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-10 col-lg-6 mb-3 d-flex mx-auto">
      <%= render "posts/form" %>
    </div> 
  </div>   
  <div class="row mt-3 d-flex flex-column">
      <% @friends_posts.each do |post| %>
        <div class="col-10 col-lg-6 mb-3 mx-auto">
          <div class="card" style= "width: 100%">
            <div class="card-header">
              <div class="row">
                <div class="col-9"><%= post.user.bio.nickname %></div>
                  <div class="col-3 text-end text-secondary" 
                  style="font-size: 10px">
                    <%= post.created_at.strftime("%d/%m/%Y") %>
                  </div>   
                </div>
              </div>
            <div class="card-body">
              <div class="list-group-flush">
                <li class="list-group-item"><%= post.content %></li>
              </div>
            </div>
            <div class="card-footer">
              <div class="row">
                <div class="col-12">
                  <%= render "comments/form", related_post: post %>
                </div>
              </div> 
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
