<div class="container-fluid">
  <div class="row mt-3">
    <div class="col-10 col-lg-6 d-flex mx-auto">
      <%= render @bio %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 col-lg-6 mb-3 d-flex mx-auto">
      <%= render "friend_request/friendship" %>
    </div>
  </div>
  <div class="row mt-3 d-flex flex-column">
      <% @posts.each do |post| %>
        <%= render partial: "posts/post", locals: {post: post} %>
      <% end %>
    </div>
  </div>
</div>
